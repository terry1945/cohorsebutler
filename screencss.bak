html {
    background-color: #869960;
}

.container {
    width: 940px;
    margin-left: auto;
    margin-right: auto;
    box-sizing: border-box;
}

img {
	width: 150px;
	border: 1px black solid;
	border-radius: 50%;
	padding: 10px;
}
.content-area{
    border-top: 3px solid black;
    border-bottom: 3px solid black;
    box-sizing: border-box;
}
.main-area p{
    width: 66%;
    float: left;
}

.sidebar{
    width: 34%;
    float: left;
    box-sizing: border-box;
}

.fix{
    clear: both;
}